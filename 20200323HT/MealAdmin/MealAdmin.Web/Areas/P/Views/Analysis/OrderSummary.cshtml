                                html += '</tr>';
                            }
                            $('#tb_fee').html(html);

                        }
                    });
            });
        });
        function toDecimal2(x) {
            var f = Math.round(x * 100) / 100;
            var s = f.toString();
            var rs = s.indexOf('.');
            if (rs < 0) {
                rs = s.length;
                s += '.';
            }
            while (s.length <= rs + 2) {
                s += '0';
            }
            return s;
        }
        function transform(v) {
            var Amountstr = toDecimal2(v).toString();
            var Amountreg = Amountstr.indexOf(".") > -1 ? /(\d)(?=(\d{3})+\.)/g : /(\d)(?=(?:\d{3})+$)/g;
            var res = Amountstr.replace(Amountreg, "$1,");
            return res;
        }
        
    </script>
    
}
