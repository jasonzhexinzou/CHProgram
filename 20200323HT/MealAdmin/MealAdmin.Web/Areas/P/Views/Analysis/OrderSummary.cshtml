                            html += ' <th style="color:#f60;">YTD</th>';
                            html += '</tr>';
                            for (var i = 0; i < _countData.length; i++) {
                                html += '<tr>';
                                for (var j = 0; j < 14; j++) {
                                    switch (j) {
                                        case 0:
