        function MyFormateDateTime(Data, fmt) {
            if (Data) {
                return getDateByDotNet(Data).pattern(fmt);
            }
            else {
                return '';
            }
        }

        function Edit(id) {
            $showdialogForUrl(
           {
               title: '设置代理审批人',
               width: '360px',
               height: '520px',
               url: contextUri + '/P/OrderApprovalManagement/AddSecondApproverAgent?id=' + id,
               pageid: 'manager',
