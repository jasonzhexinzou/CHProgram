            //});

            $('#btnExport').bind('click', function () {
                $showdialogForUrl(
                    {
                        title: '导出代理审批人信息',
                        width: '450px',
                        height: '100px',
                        url: contextUri + '/P/OrderApprovalManagement/ExportApproverSecondAgent?ApprovalNameOrMUDID=' + encodeURIComponent($('#txtApprovalNameOrMUDID').val())
                            + '&AgentNameOrMUDID=' + encodeURIComponent($('#txtAgentNameOrMUDID').val()),
                        pageid: 'manager',
                        buttons: [
                            {
                                cls: 'button',
                                txt: '关闭',
                                handler: function (e) { e.close(); }
                            }
                        ]
                    }
                );
