
@{
    Layout = null;
}

<div id="foodlist">
    <div class="headtools">
        <ul>
            <li target="sheet1">商品</li>
            <li target="sheet2">评价</li>
            <li target="sheet3">商家</li>
        </ul>
    </div>
    <div class="body">
        <div id="sheet1">
            <!-- 餐厅菜单 -->
            <div class="foodgroup">
                <ul id="foodtype">
                    <li target="hot${item.id}$">${item.name}$</li>
                </ul>
            </div>
            <div class="foodlist">
                <ul id="hot${item.id}$">
                    <li _id="food#{item.id}#">
                        <div class="cover" style="background-image:url(#{item.image_url}#?w=60&h=60)"></div>
                        <div class="infopanel">
                            <div class="name">#{item.name}#</div>
                            <div class="description">#{item.description}#</div>
                            <div class="ad">月销量#{item.sales}#笔</div>
                            <div class="price" price="#{item.price}#">
                                <div class="btntools">
                                    <span></span>
                                    <span>0</span>
                                    <span></span>
                                </div>
                                ￥#{item.price}#
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div id="sheet2">
            <!-- 评价信息 -->
            <div class="restaurant_level_panel">
                <div class="score">
                    <span></span>
                    <div>${item.num_rating.toFixed(1)}$</div>
                    <div>综合评分</div>
                </div>
                <div class="score2">
                    <div>
                        <div>配送服务</div>
                        <div class="star_panel" data="${item.num_rating}$">
                            @for (var i = 0; i < 5; i++)
                            {
                                <div class="star">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            }
                        </div>
                    </div>
                    <div>
                        <div>商品质量</div>
                        <div class="star_panel" data="${item.num_rating}$">
                            @for (var i = 0; i < 5; i++)
                            {
                                <div class="star">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            }
                        </div>
                    </div>
                    <div>
                        <div>送达时间</div>
                        <div>
                            ${item.deliver_spent}$分钟
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="sheet3">
            <!-- 商家详细信息 -->
            <div class="restaurant_info">
                <div>
                    <img src="${item.image_url}$?w=65&h=65" />
                </div>
                <div>
                    <div class="restaurant_name">
                        ${item.restaurant_name}$
                    </div>
                    <div class="line2">
                        <div class="star_panel" data="${item.num_rating}$">
                            @for (var i = 0; i < 5; i++)
                            {
                                <div class="star">
                                    <div></div>
                                    <div></div>
                                    <div></div>
                                </div>
                            }
                        </div>
                        <div style="display: inline-block;">月销量${item.recent_order_num}$笔</div>
                    </div>
                    <div class="line3">
                        平均配送给时间：${item.deliver_spent}$分钟
                    </div>
                </div>
            </div>
            <div class="promotion_info">
                ${item.promotion_info}$
            </div>
            <div class="promotion_baseinfos">
                <ul>
                    <li>地址：${item.address_text}$</li>
                    <li>营业时间：${item.serving_time.toString()}$</li>
                    <li>联系方式：${item.phone_list.toString()}$</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="foottools">
        <div class="choosed" id="btnChoosed">
            选好了
        </div>
        <div class="orders">
            <div id="ordercount"></div>
            <span id="totalmoney">￥</span>
            <span>配送费0元</span>
        </div>
    </div>
    <div class="shoppingcart">
        <div class="carpanel">
            <div class="head">
                <span>购物车</span>
                <span>清空</span>
            </div>
            <div class="list" id="shoppingcart">
                <ul>
                    <li _id="${item.id}$">
                        <span>${item.name}$</span>
                        <div class="tools">
                            <span class="money" price="${item.price}$">￥${toTowFloat(item.price * item.count)}$</span>
                            <div class="btntools">
                                <span></span>
                                <span>${item.count}$</span>
                                <span></span>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

